<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aoaydesign.bitirmeprojesi.puzzlechat.Fragments.FragmentAddRoom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YENİ CHAT ODASI EKLE"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="5sp"/>

        <EditText
            android:id="@+id/oda_ismi"
            android:layout_marginTop="40sp"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:textSize="17sp"
            android:hint="Oda İsmi"/>

        <Button
            android:layout_marginTop="40sp"
            android:id="@+id/btn_odaEkle"
            android:text="Oda Ekle"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</RelativeLayout>