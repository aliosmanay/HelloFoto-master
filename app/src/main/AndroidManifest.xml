<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aoaydesign.bitirmeprojesi.puzzlechat">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/simge"
        android:label="puzzleChat"
        android:roundIcon="@drawable/simge"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity android:name="com.aoaydesign.bitirmeprojesi.puzzlechat.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.aoaydesign.bitirmeprojesi.puzzlechat.kayitActivity" />
        <activity android:name="com.aoaydesign.bitirmeprojesi.puzzlechat.odaActivity" />
        <activity android:name="com.aoaydesign.bitirmeprojesi.puzzlechat.TabActivity" />
        <activity android:windowSoftInputMode="adjustResize" android:name="com.aoaydesign.bitirmeprojesi.puzzlechat.chatYapActivity"></activity>
    </application>

</manifest>